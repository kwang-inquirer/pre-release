<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <constants>
        <name>SourceequalsCSR</name>
        <dataType>String</dataType>
        <value>
            <stringValue>CSR</stringValue>
        </value>
    </constants>
    <description>This flow is used to complete a Subscription Restart</description>
    <dynamicChoiceSets>
        <name>Offers</name>
        <dataType>String</dataType>
        <displayField>Offer_Name__c</displayField>
        <filters>
            <field>Campaign__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>varCampaignID</elementReference>
            </value>
        </filters>
        <object>Campaign_Offer__c</object>
        <outputAssignments>
            <assignToReference>varOfferID</assignToReference>
            <field>Offer__c</field>
        </outputAssignments>
        <sortField>Offer_Name__c</sortField>
        <sortOrder>Asc</sortOrder>
        <valueField>Offer_Name__c</valueField>
    </dynamicChoiceSets>
    <dynamicChoiceSets>
        <description>All active campaigns where Type = Kiosk associated with the running user&apos;s partner account.</description>
        <name>Promos</name>
        <dataType>String</dataType>
        <displayField>Name</displayField>
        <filters>
            <field>IsActive</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Type</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>CSR Promo</stringValue>
            </value>
        </filters>
        <object>Campaign</object>
        <outputAssignments>
            <assignToReference>varCampaignID</assignToReference>
            <field>Id</field>
        </outputAssignments>
        <sortField>Name</sortField>
        <sortOrder>Asc</sortOrder>
        <valueField>Name</valueField>
    </dynamicChoiceSets>
    <formulas>
        <name>RunningUser</name>
        <dataType>String</dataType>
        <expression>{!$User.Id}</expression>
    </formulas>
    <interviewLabel>Subscription Restart {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Subscription Restart</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>Flow</processType>
    <recordUpdates>
        <name>UpdateSubscription</name>
        <label>UpdateSubscription</label>
        <locationX>516</locationX>
        <locationY>52</locationY>
        <connector>
            <targetReference>Offer_Checkout</targetReference>
        </connector>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>varSubscriptionId</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>subscription_Offer__c</field>
            <value>
                <elementReference>varOfferID</elementReference>
            </value>
        </inputAssignments>
        <object>Subscription__c</object>
    </recordUpdates>
    <screens>
